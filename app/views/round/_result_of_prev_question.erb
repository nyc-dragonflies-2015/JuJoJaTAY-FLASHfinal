<% if cur_card > 0 %>
  <% if @deck.cards[session[:guesses]-1].guesses.last.correct == true %>
    <div class="alert alert-success" role="alert">
      <h3> WELL DONE</h3>
    </div>
  <% else %>
    <div class="alert alert-danger" role="alert">
      <h2> U WRONG </h2>
    </div>
    <div class="alert-info" role="alert">
      <h2>Correct Answer:  <%= @deck.cards[session[:guesses]-1].answer %></h2>
    </div>
  <% end %>
<% end %>