<div class="text-center">
  <% if @errors %>
    <h2><%= @errors %></h2>
    <h3>Please Try Again</h3>
    <br>
    <img src= 'http://cdn.smosh.com/sites/default/files/legacy.images/smosh-pit/032011/family-guy-doggie-hell.gif'/>
    <br>
  <% end %>
<br>
  <form action='/users' method='post'>
    <input type="text" name="user[email]" placeholder="email"/>
    <input type="password" name="user[password]" placeholder="password"/> <br><br>
    <button type="submit" value="Sign Up" class="btn btn-primary btn-lg">Sign Up</button>
  </form>
</div>